extends ../layout

block content

    if packet === "Y"
        h1 Пакетный режим
    else if packet === "N"
        h1 Одиночный режим
    else
        h1= title
    h2= example

    if(themes)
        for theme in themes
            h4 ID: #{theme.id} Тема: #{theme.theme}

    if packet === "N"
        form(action='/parser/id' method='post' id='form')
            input(type='text' name='theme' id='theme' placeholder="ID темы")
            br
            input(type='text' name='url' id='url' placeholder="URL задачи")
            br
            input(type='submit' value='Начать парсинг')

        br
        br
        form(action='/parser/id_notation' method='post' id='form')
            textarea(rows="30" cols="150" name='text' id='text' placeholder="text")
            br
            input(type='submit' value='В полную нотацию')


        br
        br
        form(action='/parser/id_first_white_move' method='post' id='form')
            textarea(rows="30" cols="150" name='text' id='text' placeholder="text")
            br
            input(type='submit' value='Первый ход белых')

        br
        br
        form(action='/parser/id_kvad' method='post' id='form')
            textarea(rows="30" cols="150" name='text' id='text' placeholder="text")
            br
            input(type='submit' value='Убрать квадратные скобки')

        br
        br
        form(action='/parser/id_krug' method='post' id='form')
            textarea(rows="30" cols="150" name='text' id='text' placeholder="text")
            br
            input(type='submit' value='Убрать круглые скобки')

    else if packet === "Y"
        form(action='/parser/packet' method='post' id='form')
            input(type='text' name='theme' id='theme' placeholder="ID темы")
            br
            input(type='text' name='url' id='url' placeholder="URL страницы с задачами")
            br
            input(type='submit' value='Начать парсинг')

    p= status

    div
        h2 ORIGIN
        pre#origin= origin
        h2 RESULT
        pre#result= result



